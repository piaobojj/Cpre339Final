<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#d4ca96"
    tools:context="project.cpre339final.MainActivity">


    <ImageView

        app:srcCompat="@drawable/mainbk"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:id="@+id/imageView2"
        android:layout_width="400dp"
        android:layout_height="350dp"
        android:scaleType="fitXY"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp" />

    <Button
        android:text="PLAY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/startBtn"
        android:background="@drawable/customfuntion"
        android:width="125dp"
        android:height="70dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginBottom="7dp"
        android:layout_above="@+id/exitBtn"
        android:layout_alignLeft="@+id/exitBtn"
        android:layout_alignStart="@+id/exitBtn" />

    <Button
        android:text="Exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/exitBtn"
        android:background="@drawable/customfuntion"
        android:width="125dp"
        android:height="70dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginLeft="52dp"
        android:layout_marginStart="52dp"
        android:layout_marginBottom="12dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/imageView2"
        android:layout_toEndOf="@+id/imageView2" />

</RelativeLayout>
